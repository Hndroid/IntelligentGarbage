        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        app:sb_text="跳过 3"
        app:sb_auto_check="false"
        app:sb_bg_color="#aaFF4081"
        app:sb_border_color="#aaFF4081"
        app:sb_shape="arc"
        app:sb_text_color="@android:color/white" />

